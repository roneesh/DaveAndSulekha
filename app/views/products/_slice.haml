%section.slice
  .gallery-exhibit
    = image_tag @product_flat_image.source, :class => "gallery-image-large", :id => "exhibit1"
  .gallery-thumbs
    = image_tag @product_navy_suit_image.source, :class => "gallery-thumb"
    = image_tag @product_stone_suit_image.source, :class => "gallery-thumb"
  .pocket-square-copy
    .name
      %h3
        = @product.name 
    .price-and-description
      .price
        %h1 
          = @product.price
          <small>dollars</small>
        %p.description
          = @product.description
        - if @product.etsy_link
          = link_to "Purchase on Etsy", @product.etsy_link, class: "button", target: "newtab"
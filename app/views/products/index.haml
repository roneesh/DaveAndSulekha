
%h1.collection-number Collezione 1 - Pocket Squares
%h3.collection-product-line The Perfect Madras
%hr.collection-divider
%ul.collection-thumb-list
  -@products.each do |product|
    -if product.product_line == "The Perfect Madras"
      %li.collection-thumb
        = link_to image_tag(product.product_images.where(image_type: "gallery").sample.source), product_url(product.id), remote: true

